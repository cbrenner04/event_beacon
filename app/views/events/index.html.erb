<h1>Events</h1>

<div class="mb-3">
  <%= link_to "Add", new_event_path %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date/Time</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= event.occurs_at.strftime('%m/%d/%Y %I:%M %P') %></td>
        <td><%= link_to "", edit_event_path(event), class: "fa fa-pencil" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
