<% breadcrumb :experiences, @event %>

<h1><%= @event.name %> Experiences</h1>

<div class="mb-3">
  <%= link_to "Add", new_event_experience_path(@event) %>
</div>

<table class="table table-striped table-hover">
  <thead></thead>
  <tbody>
    <% @event.experiences.each do |experience| %>
      <tr>
        <td>
          <%= link_to experience.name, event_experience_notification_path(@event, experience, experience.notification) %>
        </td>
        <td>
          <%= experience.pretty_occurs_at %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
