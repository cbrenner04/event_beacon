<h1>Sign up</h1>

<p>Please set your password to complete account setup.</p>

<%= form_for @resource, as: resource_name, url: user_confirmation_path, class: "form-horizontal" do |f| %>
  <%= render "shared/alert", invalid_object: @resource, name: "account" %>

  <%= f.hidden_field :confirmation_token, value: @original_token %>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, class: "form-control", type: "password"  %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation, class: "form-control", type: "password" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>
  <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
<% end %>
